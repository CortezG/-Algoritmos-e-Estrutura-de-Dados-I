#include <stdio.h>
#include <stdlib.h>
#include <string.h>

typedef struct {
    char nome[100];
    char dataNascimento[11]; // Assumindo formato "dd/mm/aaaa"
    char cpf[12]; // Assumindo CPF com 11 dígitos
} Pessoa;

Pessoa* criarPessoa() {
    Pessoa* novaPessoa = (Pessoa*)malloc(sizeof(Pessoa));
    return novaPessoa;
}

void preencherDados(Pessoa* pessoa, const char* nome, const char* dataNascimento, const char* cpf) {
    strcpy(pessoa->nome, nome);
    strcpy(pessoa->dataNascimento, dataNascimento);
    strcpy(pessoa->cpf, cpf);
}

void imprimirDados(const Pessoa* pessoa) {
    printf("Nome: %s\n", pessoa->nome);
    printf("Data de Nascimento: %s\n", pessoa->dataNascimento);
    printf("CPF: %s\n", pessoa->cpf);
}

int main() {
    Pessoa* pessoa = criarPessoa();

    preencherDados(pessoa, "João da Silva", "01/01/1990", "123.456.789-00");

    imprimirDados(pessoa);

    free(pessoa);

    return 0;
}
